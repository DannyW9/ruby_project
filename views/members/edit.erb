<h1>Update <%= @member.full_name() %>'s Details</h1>
<hr>
<div class="edit_member_form">
<form action="/members/<%= @member.id %>" method="POST">

  <div class="first_name">
    <label for="first-name">Change First Name:</label>
    <input class="text_input" type="text" name="first_name" id="first-name" value="<%= @member.first_name %>">
  </div>

  <div class="last_name">
    <label for="last-name">Change Last Name:</label>
    <input class="text_input" type="text" name="last_name" id="last-name" value="<%= @member.last_name %>">
  </div>

  <div class="membership_type">
    <label for="membership-type">Change membership type:</label>
      <div class="radio_inputs">
    <% if @member.membership_type == "Premium" %>
    <input type="radio" name="membership_type" id="membership-type" value="Regular"> Regular
    <input type="radio" name="membership_type" id="membership-type" value="Premium" checked> Premium
    <% else %>
    <input type="radio" name="membership_type" id="membership-type" value="Regular" checked> Regular
    <input type="radio" name="membership_type" id="membership-type" value="Premium"> Premium
    <% end %>
      </div>
  </div>

  <div class="submit">
    <input class="update_button" type="submit" value="Update Member Details">
  </div>

</form>






</div>
