<h1>Daily Classes</h1>

<% @classes.each do |gym_class| %>
<div class="class_div">
  <h3><%= gym_class.name %></h3>
  <p>Class Start Time: <%= gym_class.class_time %></p>
  <p>Members attending (<%= gym_class.members_attending() %>/<%= gym_class.max_capacity %>):</p>

  <ul>
    <% gym_class.members.each do |member| %>
    <li><a href="/members/<%= member.id %>"><%= member.full_name() %></a>
      <form action="/reservations/<%= gym_class.id %>/<%= member.id %>/delete" method="post">
        <input type="submit" value="Remove from Class">
      </form>
    </li>
    <% end %>
  </ul>

  <form action="/classes/<%= gym_class.id %>" method="get">
    <input type="submit" value="View More Details">
  </form>

  <form action="/reservations/<%= gym_class.id %>/delete" method="post">
    <input type="submit" value="Remove All Reservations">
  </form>

</div>
<hr>
<% end %>
