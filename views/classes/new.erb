<div class="new_class_form">
  <form action="/classes" method="POST">

    <div class="name">
      <label for="name">Class Name:</label>
      <input type="text" name="name" id="name">
    </div>

    <div class="instructor">
      <label for="instructor">Instructor:</label>
      <input type="text" name="instructor" id="instructor">
    </div>

    <div class="max_capacity">
      <label for="max-capacity">Maximum Capacity:</label>
      <input type="number" name="max_capacity" id="max-capacity">
    </div>

    <div class="class_time">
      <label for="class-time">Select a Time Slot:</label>
      <input type="time" name="class_time">
    </div>

    <div class="description">
      <label for="description">Description:</label>
      <textarea name="description" id="description" rows="8" cols="80">Insert Description:</textarea>
    </div>

    <input type="submit" value="Create New Class">

  </form>
</div>
