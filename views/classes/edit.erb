<h1>Update <%= @class.name %> Details</h1>
<div class="edit_class_form">
  <form action="/classes/<%= @class.id %>" method="POST">

    <div class="name">
      <label for="name">Change Class Name:</label>
      <input class="text_input" type="text" name="name" id="name" value="<%= @class.name %>">
    </div>

    <div class="instructor">
      <label for="instructor">Change Instructor:</label>
      <input class="text_input" type="text" name="instructor" id="instructor" value="<%= @class.instructor %>">
    </div>

    <div class="max_capacity">
      <label for="max-capacity">Change Maximum Capacity:</label>
      <input class="text_input" type="number" name="max_capacity" id="max-capacity" value="<%= @class.max_capacity %>">
    </div>

    <div class="class_time">
      <label for="class-time">Change Time Slot:</label>
      <input class="text_input" type="time" name="class_time" value="<%= @class.class_time.slice(0..4) %>">

    </div>

    <input class="update_button" type="submit" value="Update Class Details">

  </form>
</div>
